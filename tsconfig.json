{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/node_modules", "**/.*/", "dist", "build", "test"]
}
